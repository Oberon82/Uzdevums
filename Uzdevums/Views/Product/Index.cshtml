@model IEnumerable<Uzdevums.Models.ProductViewModel>

@{
    ViewData["Title"] = "Produktu saraksts";
}

<div class="card shadow-lg p-3 mb-5 bg-white rounded">
    <div class="card-header justify-content-center">
        Produktu saraksts
        <br />
        @if (User.IsInRole("admin"))
        {
            <a class="text-decoration-none" asp-action="Create"><i class="bi bi-add"></i> Pievienot jaunu</a>
        }
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfUnits)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PricePerUnit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PriceWithVat)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfUnits)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PricePerUnit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriceWithVat)
                        </td>
                        <td>
                            <a class="text-decoration-none" asp-action="Detail" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Apskatīties</a>
                            @if (User.IsInRole("admin"))
                            {
                                 @: | 
                                    <a class="text-decoration-none" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i> Labot</a>
                                 @: | 
                                    <a class="text-decoration-none" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Dzēst</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
